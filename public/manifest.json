{
  "name": "Castbox Chrome Extension",
  "description": "Changing the appearance of the \"Subscribed\" page and making it more similar to the \"Library\" page of the mobile version",
  "version": "1.0.2",
  "manifest_version": 3,
  "action": {
	"default_popup": "index.html",
    "default_title": "Open the player"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["https://castbox.fm/*"],
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "icons": {
    "16": "logo_120.png",
    "48": "logo_120.png",
    "128": "logo_120.png"
  }
}
